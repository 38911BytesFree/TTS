{
  "manifest_version": 3,
  "name": "Text-to-Speech Reader",
  "version": "1.1",
  "description": "Reads selected text aloud using the Web Speech API.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "icons": {
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "./dist/background.js"
  }
}